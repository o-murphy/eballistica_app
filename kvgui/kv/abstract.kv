<AppTopBar>
    orientation: "vertical"
    spacing: "12dp"
    pos_hint: {"top": 1}
    adaptive_height: True

<TopBar>:
    type_height: 'medium'
    title: "eBallistica"
    anchor_title: "left"
    elevation: 3

<FormInput>
    size_hint_x: 0.3
    pos_hint: {'center_x': 0.5, 'center_y': 0.6}

<FormLabel>
    # halign: "left"
    size_hint_x: 0.6
    padding: dp(5)
    font_style: 'Subtitle2'

<FormSuffix>
    halign: "left"
    size_hint_x: 0.1
    font_style: 'Subtitle2'

<MD3CardAbs>
    _padding: dp(15)
    _spacing: dp(15)
    padding: self._padding
    spacing: self._spacing

<FormSelector>
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_x: 0.3
    size_hint_y: None
#    height: dp(30)
    icon: 'menu-down'
    icon_size: dp(20)
    halign: 'left'
#    rounded_button: True
#    md_bg_color: app.theme_cls.primary_light

<BCSelector>
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_x: 0.3
    size_hint_y: None
    icon: 'menu-down'
    icon_size: dp(20)
    halign: 'left'

