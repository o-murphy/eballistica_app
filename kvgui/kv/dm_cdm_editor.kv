<CDMEditor>
    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: "20dp"
            spacing: "15dp"
            id: cdm_layout


            MDLabel:
                id: title
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_x: 1
                halign: 'center'

            MDGridLayout:
                id: cdm_layout
                cols: 3
                padding: "20dp"
                spacing: "10dp"
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
