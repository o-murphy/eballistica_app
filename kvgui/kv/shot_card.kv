<ShotCardScreen>:

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: "20dp"
            spacing: "15dp"

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(140)

                FormLabel:
                    id: target_label
                    text: 'Target'
                    font_style: 'H6'
                    size_hint: 1, None
                    height: self.texture_size[1]

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: distance_label
                        text: 'Distance'

                    DistanceValue:
                        id: distance
                        input_filter: 'float'

                    FormSuffix:
                        id: distance_suffix
                        text: ''

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: look_angle_label
                        text: 'Look angle'

                    LookAngleValue:
                        id: look_angle
                        input_filter: 'float'

                    FormSuffix:
                        id: look_angle_suffix
                        text: ''

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(300)

                FormLabel:
                    id: atmo_label
                    text: 'Atmosphere'
                    font_style: 'H6'
                    size_hint: 1, None
                    height: self.texture_size[1]

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: altitude_label
                        text: 'Altitude'

                    AltitudeValue:
                        id: altitude
                        input_filter: 'float'

                    FormSuffix:
                        id: altitude_suffix
                        text: ''

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: pressure_label
                        text: 'Pressure'

                    PressureValue:
                        id: pressure
                        input_filter: 'float'

                    FormSuffix:
                        id: pressure_suffix
                        text: ''

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: temperature_label
                        text: 'Temperature'

                    TemperatureValue:
                        id: temperature
                        input_filter: 'float'

                    FormSuffix:
                        id: temperature_suffix
                        text: ''

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: humidity_label
                        text: 'Humidity'

                    HumidityValue:
                        id: humidity
                        input_filter: 'float'

                    FormSuffix:
                        id: humidity_suffix
                        text: ''

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: wind_speed_label
                        text: 'Wind speed'

                    WindSpeedValue:
                        id: wind_speed
                        input_filter: 'float'

                    FormSuffix:
                        id: wind_speed_suffix
                        text: ''

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: wind_dir_label
                        text: 'Wind angle'

                    WindAngleValue:
                        id: wind_angle
                        input_filter: 'float'

                    FormSuffix:
                        id: wind_angle_suffix
                        text: ''

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(60)

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    MDRaisedButton:
                        id: one_shot
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: 1, None
                        elevation: 0

                    MDRaisedButton:
                        id: trajectory
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: 1, None
                        elevation: 0
