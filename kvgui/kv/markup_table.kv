<MarkupTableSheet>:
    halign: 'center'
    markup: True
    font_name: "resources/fonts/VeraMono.ttf"
    theme_text_color: 'Secondary'
    size_hint: 1, None
    height: self.texture_size[1]
    halign: 'center'

<MarkupTableHeader>:
    halign: 'center'
    markup: True
    font_name: "resources/fonts/VeraMono.ttf"
    theme_text_color: 'Primary'
    size_hint: 1, None
    height: self.texture_size[1]
    halign: 'center'

<MarkupTable>:
    orientation: 'vertical'
    pos_hint: {"center_x": 0.5, 'top': 1}
    size_hint_y: None

    MarkupTableHeader:
        id: header

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height

            MarkupTableSheet:
                id: sheet
                pos_hint: {"center_x": 0.5, 'top': 1}
                size_hint: 1, None
