<RifleCardScreen>

    MDScrollView:

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: "20dp"
            spacing: "15dp"

            MD3CardAbs:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(60)

                FormLabel:
                    id: name_label
                    text: 'Name'
                    size_hint_x: 0.2

                FormInput:
                    id: name_input
                    text: 'New Rifle'
                    size_hint_x: 0.8

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(220)

                FormLabel:
                    id: prop_title_label
                    text: 'Properties'
                    font_style: 'H6'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: sight_height_label
                        text: 'Sight height'

                    SightHeightValue:
                        id: sight_height
                        input_filter: 'float'

                    FormSuffix:
                        id: sight_height_suffix
                        text: 'cm'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: twist_dir_label
                        text: 'Twist direction'
                        size_hint_x: 0.6

                    TwistDirSelector:
                        id: twist_dir
                        text: 'Right'
                        icon: 'rotate-right'
                        size_hint_x: 0.3
                        size_hint_y: None
                        height: dp(30)

                    MDWidget:
                        size_hint_x: 0.1

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: twist_label
                        text: 'Twist'

                    TwistValue:
                        id: twist
                        input_filter: 'float'

                    FormSuffix:
                        id: twist_suffix
                        text: 'inch'


