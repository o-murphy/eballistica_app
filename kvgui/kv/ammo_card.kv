<AmmoCardScreen>:

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: "20dp"
            spacing: "15dp"

            MD3CardAbs:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(60)

                FormLabel:
                    id: name_label
                    text: 'Name'
                    size_hint_x: 0.2

                FormInput:
                    id: name_input
                    text: 'New Ammo'
                    size_hint_x: 0.8

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(480)

                FormLabel:
                    id: prop_title
                    text: 'Properties'
                    font_style: 'H6'
                    size_hint: 1, None
                    height: self.texture_size[1]

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: diameter_label
                        text: 'Diameter'

                    DiameterValue:
                        id: diameter
                        input_filter: 'float'

                    FormSuffix:
                        id: diameter_suffix
                        text: 'inch'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: weight_label
                        text: 'Weight'

                    WeightValue:
                        id: weight
                        input_filter: 'float'

                    FormSuffix:
                        id: weight_suffix
                        text: 'gr'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: length_label
                        text: 'Length'

                    LengthValue:
                        id: length
                        input_filter: 'float'

                    FormSuffix:
                        id: length_suffix
                        text: 'inch'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: muzzle_velocity_label
                        text: 'Muzzle velocity'

                    MuzzleValue:
                        id: muzzle_velocity
                        input_filter: 'float'

                    FormSuffix:
                        id: muzzle_velocity_suffix
                        text: 'm/s'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: dm_label
                        text: 'Drag model'
                        size_hint_x: 0.6

                    DragModelSelector:
                        id: dm_select
                        name: 'dm_select'
                        text: 'G7'
                        size_hint_x: 0.3

                    BCSelector:
                        id: bc_select
                        name: 'bc_select'
                        text: 'BC: 0.275'
                        size_hint_x: 0.3
                        icon: ""

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: powder_sens_label
                        text: 'Powder sensitivity'

                    MeasureValue:
                        id: powder_sens
                        input_filter: 'float'

                    FormSuffix:
                        id: powder_sens_suffix
                        text: '%'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: powder_temp_label
                        text: 'Powder temperature'

                    PowderTempValue:
                        id: powder_temp
                        input_filter: 'float'

                    FormSuffix:
                        id: powder_temp_suffix
                        text: '°C'

                MDRectangleFlatButton:
                    id: powder_sens_act
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 1, None
                    text: 'Calculate powder sensitivity'

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(320)

                FormLabel:
                    id: zero_title
                    text: 'Zeroing'
                    font_style: 'H6'
                    size_hint: 1, None
                    height: self.texture_size[1]

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: zero_dist_label
                        text: 'Zeroing distance'

                    ZeroDistValue:
                        id: zero_dist
                        input_filter: 'float'

                    FormSuffix:
                        id: zero_dist_suffix
                        text: 'm'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: altitude_label
                        text: 'Altitude'

                    MeasureValue:
                        id: altitude
                        input_filter: 'float'

                    FormSuffix:
                        id: altitude_suffix
                        text: 'm'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: pressure_label
                        text: 'Pressure'

                    MeasureValue:
                        id: pressure
                        input_filter: 'float'

                    FormSuffix:
                        id: pressure_suffix
                        text: 'mmHg'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: temperature_label
                        text: 'Temperature'

                    MeasureValue:
                        id: temperature
                        input_filter: 'float'

                    FormSuffix:
                        id: temperature_suffix
                        text: '°C'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: humidity_label
                        text: 'Humidity'

                    MeasureValue:
                        id: humidity
                        input_filter: 'float'

                    FormSuffix:
                        id: humidity_suffix
                        text: '%'

