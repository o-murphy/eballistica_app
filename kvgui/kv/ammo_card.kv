<AmmoCardScreen>:

    MDScrollView:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: "20dp"
            spacing: "15dp"

            MD3CardAbs:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(60)

                FormLabel:
                    id: name_l
                    text: 'Name'
                    size_hint_x: 0.2

                FormInput:
                    id: name
                    text: 'New Ammo'
                    size_hint_x: 0.8

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(400)

                FormLabel:
                    id: prop_title
                    text: 'Properties'
                    font_style: 'H6'
                    size_hint: 1, None
                    height: self.texture_size[1]

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: diameter_l
                        text: 'Diameter'

                    MeasureValue:
                        id: diameter
                        input_filter: 'float'

                    FormSuffix:
                        id: diameter_s
                        text: 'inch'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: weight_l
                        text: 'Weight'

                    MeasureValue:
                        id: weight
                        input_filter: 'float'

                    FormSuffix:
                        id: weight_s
                        text: 'gr'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: length_l
                        text: 'Length'

                    MeasureValue:
                        id: length
                        input_filter: 'float'

                    FormSuffix:
                        id: length_s
                        text: 'inch'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: muzzleelocity_l
                        text: 'Muzzle velocity'

                    MeasureValue:
                        id: muzzleelocity
                        input_filter: 'float'

                    FormSuffix:
                        id: muzzleelocity_s
                        text: 'm/s'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: diameter_label
                        text: 'Drag model'
                        size_hint_x: 0.6

                    DragModelSelector:
                        id: diameter_select
                        name: 'diameter_select'
                        text: 'G7'
                        size_hint_x: 0.3

                    BCSelector:
                        id: bc_select
                        name: 'bc_select'
                        text: 'BC: 0.275'
                        size_hint_x: 0.3
                        icon: ""

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: powder_sens_l
                        text: 'Powder sensitivity'

                    MeasureValue:
                        id: powder_sens
                        input_filter: 'float'

                    FormSuffix:
                        id: powder_sens_s
                        text: '%'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: powder_temp_l
                        text: 'Powder temperature'

                    MeasureValue:
                        id: powder_temp
                        input_filter: 'float'

                    FormSuffix:
                        id: powder_temp_s
                        text: '°C'

                MDRectangleFlatButton:
                    id: powder_sens_act
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 1, None
                    text: 'Calculate powder sensitivity'

            MD3CardAbs:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(240)

                FormLabel:
                    id: zero_title
                    text: 'Zeroing'
                    font_style: 'H6'
                    size_hint: 1, None
                    height: self.texture_size[1]

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: zero_dist_l
                        text: 'Zeroing distance'

                    MeasureValue:
                        id: zero_dist
                        input_filter: 'float'

                    FormSuffix:
                        id: zero_dist_s
                        text: 'm'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: altitude_l
                        text: 'Altitude'

                    MeasureValue:
                        id: altitude
                        input_filter: 'float'

                    FormSuffix:
                        id: altitude_s
                        text: 'm'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: pressure_l
                        text: 'Pressure'

                    MeasureValue:
                        id: pressure
                        input_filter: 'float'

                    FormSuffix:
                        id: pressure_s
                        text: 'mmHg'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: temperature_l
                        text: 'Temperature'

                    MeasureValue:
                        id: temperature
                        input_filter: 'float'

                    FormSuffix:
                        id: temperature_s
                        text: '°C'

                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: "15dp"

                    FormLabel:
                        id: humidity_l
                        text: 'Humidity'

                    MeasureValue:
                        id: humidity
                        input_filter: 'float'

                    FormSuffix:
                        id: humidity_s
                        text: '%'

