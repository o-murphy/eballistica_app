<FloatField>
    text: '0.0'
    input_filter: 'float'
#    mode: ""


<RiflesCardScreen>:
    name: 'rifle_card'

    MDScrollView:
        MDBoxLayout:
            orientation: "vertical"
            spacing: "15dp"
            padding: "20dp"
            height: self.minimum_height
            size_hint_y: None

            MDCard:
                padding: "20dp"
                height: self.minimum_height
                size_hint_y: None

                MDTextField:
                    text: 'New rifle'
#                    mode: "fill"
                    hint_text: "Weapon name"
                    helper_text: "Required field"
                    helper_text_mode: "on_error"
                    max_text_length: 40
                    required: True

            MDCard:
                padding: "20dp"
                spacing: "15dp"
                size_hint: 1, None
                height: self.minimum_height  # Adjust the card's height to fit content
                orientation: "vertical"

                MDLabel:
                    text: 'Properties:'
                    font_style: 'H6'
                    size_hint_y: None
                    height: self.texture_size[1]

                BoxLayout:
                    orientation: "horizontal"
                    height: self.minimum_height
                    size_hint_y: None

                    MDLabel:
                        text: "Twist"
                        size_hint_x: 0.5
                    FloatField:
                        size_hint_x: 0.3
                    MDLabel:
                        text: "Inch"
                        size_hint_x: 0.2
                        halign: 'right'

                BoxLayout:
                    orientation: "horizontal"
                    height: self.minimum_height
                    size_hint_y: None

                    MDLabel:
                        text: "Twist direction"
                        size_hint_x: 0.5
                    TwistDirection:
                        size_hint_x: 0.5

                BoxLayout:
                    orientation: "horizontal"
                    height: self.minimum_height
                    size_hint_y: None

                    MDLabel:
                        text: "Sight height"
                        size_hint_x: 0.5
                    FloatField:
                        size_hint_x: 0.3
                    MDLabel:
                        text: "cm"
                        size_hint_x: 0.2
                        halign: 'right'
