<SettingsScreen>:
    name: "settings"

    MDScrollView:
        MDBoxLayout:
            orientation: "vertical"
            spacing: "15dp"
            padding: "20dp"
            height: self.minimum_height
            size_hint_y: None

            MDCard:
                orientation: "vertical"
                padding: "20dp"
                spacing: "15dp"
                height: self.minimum_height
                size_hint_y: None

                MDLabel:
                    text: 'Properties:'
                    font_style: 'H6'
                    size_hint_y: None
                    height: self.texture_size[1]

                BoxLayout:
                    orientation: "horizontal"
                    height: self.minimum_height
                    size_hint_y: None

                    MDLabel:
                        text: "Twist units"
                        size_hint_x: 0.5
                    MDDropDownItem:
                        mode: "fill"
                        size_hint_x: 0.5