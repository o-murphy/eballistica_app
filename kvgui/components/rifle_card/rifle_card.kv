<FloatField>
    text: '0.0'
    input_filter: 'float'
    pos_hint: {'center_x': 0.65, 'center_y': 0.1}
    size_hint_x: 0.3
    helper_text_mode: "on_error"

<ConvertableNumField>
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    prefix: ""
    suffix: ""

    MDLabel:
        text: self.parent.prefix
        pos_hint: {'center_x': 0.25, 'center_y': 0.5}
        size_hint: 0.5, 1
    FloatField:

    MDLabel:
        text: self.parent.suffix
        pos_hint: {'center_x': 0.9, 'center_y': 0.5}
        size_hint: 0.2, 1
        halign: 'right'


<ComboField>
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    prefix: ""

    MDLabel:
        text: self.parent.prefix
        pos_hint: {'center_x': 0.25, 'center_y': 0.5}
        size_hint: 0.5, 1
    MDDropDownItem:
        text: 'Right'
        pos_hint: {'center_x': 0.65, 'center_y': 0.1}
        size_hint_x: 0.3


<RiflesCardScreen>:
    name: 'rifle_card'

    MDScrollView:

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            spacing: "40dp"
            padding: "20dp"

            row_force_default: True
            row_default_height: 30

            MDLabel:
                text: 'Weapon name:'
                halign: 'center'

            MDTextField:
                text: 'New rifle'
#                size_hint: 1, None
                hint_text: "Weapon name"
                helper_text: "Required field"
                helper_text_mode: "on_error"
                max_text_length: 40
#                mode: "round"
                required: True

            MDLabel:
                text: 'Properties:'
                halign: 'center'

            ComboField:
                prefix: "Twist direction"

            ConvertableNumField:
                prefix: "Twist"
                suffix: "inch"



            ConvertableNumField:
                prefix: "Sight height"
                suffix: "cm"


